@page
@model hakimslivs.Pages.Admin.OrderManager.EditModel

@{
    ViewData["Title"] = "Redigera Order";
}

<h1>@ViewData["Title"] #@Model.Order.ID</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.ID" />
            <div class="form-group">
                <label asp-for="Order.OrderStatus.OrderStatusName" class="control-label">Orderstatus</label>
                <select asp-for="Order.OrderStatus.OrderStatusName" class="form-control" asp-items="Model.OrderStatuses"></select>
                <span asp-validation-for="Order.OrderStatus" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" type="checkbox" id="payment-ok" asp-for="Order.PaymentOk" />
                <label class="form-check-label" for="payment-ok" >
                     Betalning OK
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Spara" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-info">Tillbaka</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
